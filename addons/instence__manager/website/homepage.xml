<odoo>
    <template id="custom_website_homepage" inherit_id="website.homepage">
        <xpath expr="//div[@id='wrap']" position="replace">
            <!-- Hero Section -->
            <section class="hero-section">
                <div class="container">
                    <h1 class="display-4">Odoo Instance Creation Made Easy</h1>
                    <p class="lead">Trust our expert group to seamlessly create and manage your Odoo
                        instances.</p>
                </div>
            </section>

            <!-- Create Instance Section -->
            <section id="create-instance" class="py-5">
                <div class="container text-center">
                    <h2 class="mb-4">Get Started</h2>
                    <p class="lead">Ready to experience the power of Odoo? Click the button below to
                        create your instance.</p>
                    <a href="/create" class="btn btn-primary btn-lg">Create Odoo Instance</a>
                    <a href="/instance_manager/all" class="btn btn-primary btn-lg">check My instence</a>
                </div>
                
            </section>

            <!-- Bootstrap JS and Popper.js -->
            <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        </xpath>
    </template>

</odoo>